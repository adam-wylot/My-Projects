<Window x:Class="MoviesListGUI.AdditionalWindow"
        x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesListGUI"
        mc:Ignorable="d"
        Title="AdditionalWindow" Height="450" Width="800"
        Background="Gray">
    
    <Grid>
        <Image x:Name="posterImage" Margin="10,12,602,167" />
        
        <Grid>
            <Label x:Name="titleLabel" Content="title" HorizontalAlignment="Left" Margin="206,11,0,0" VerticalAlignment="Top" Width="460" FontSize="20" FontWeight="Bold" />
            <TextBlock x:Name="descriptionText" Text="Overview" HorizontalAlignment="Left" Margin="206,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="213" Width="519" Background="LightGray"/>
            <Label x:Name="popularityLabel" Content="Popularity: " HorizontalAlignment="Left" Margin="206,271,0,0" VerticalAlignment="Top"/>
            <Label x:Name ="releaseDateLabel" Content="Release Date: " HorizontalAlignment="Right" Margin="0,271,75,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
